{
  "private": true,
  "workspaces": [
    "utils",
    "frontend",
    "backend/firestore",
    "backend/functions"
  ],
  "scripts": {
    "start:frontend": "yarn workspace frontend start",
    "emulators": "cd backend && firebase emulators:start",
    "start:backend": "concurrently -m 1 --kill-others \"yarn workspace firestore compile-rules\" \"yarn workspace functions install\" \"yarn workspace functions build\" \"cd backend && firebase emulators:start --import=./data\"",
    "start:shared": "yarn workspace utils build-watch",
    "start": "concurrently -m 4 --kill-others \"yarn start:shared\" \"yarn start:backend\" \"yarn start:frontend\"",
    "build:frontend": "yarn workspace frontend build",
    "build:shared": "yarn workspace utils build"
  },
  "dependencies": {
    "concurrently": "^6.2.0",
    "nodemailer": "^6.6.2"
  }
}
