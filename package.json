{
  "private": true,
  "workspaces": [
    "shared",
    "frontend",
    "backend/firestore",
    "backend/functions"
  ],
  "scripts": {
    "start:frontend": "yarn workspace frontend start",
    "emulators": "cd backend && firebase emulators:start",
    "start:backend": "concurrently -m 1 --kill-others \"yarn workspace functions install\" \"yarn workspace functions build\" \"cd backend && firebase emulators:start\"",
    "start:shared": "yarn workspace bartstua-shared build-watch",
    "start": "concurrently -m 3 --kill-others \"yarn start:shared\" \"yarn start:backend\" \"yarn start:frontend\""
  },
  "dependencies": {
    "concurrently": "^6.2.0"
  }
}
