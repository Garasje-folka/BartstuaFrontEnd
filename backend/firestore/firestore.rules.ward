rules_version = '2';

match /dropInReservations/{reservationDoc} {
  allow read: if resource.data.uid == request.auth.uid;
}

match /fullSaunaReservations/{reservationDoc} {
  allow read: if resource.data.uid == request.auth.uid;
}

match /locations/{locationDoc}/dropInEvents/{eventDoc} {
  allow read: true
}

match /locations/{locationDoc}/fullSaunaEvents/{eventDoc} {
  allow read: true
}
